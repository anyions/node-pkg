{
  "name": "@anyions/node-pkg",
  "type": "module",
  "version": "1.0.3",
  "description": "Node packages management",
  "author": {
    "name": "AnyIons",
    "email": "anyions@hotmail.com",
    "url": "https://github.com/anyions"
  },
  "license": "MIT",
  "homepage": "https://github.com/anyions/node-pkg",
  "repository": {
    "url": "https://github.com/anyions/node-pkg.git"
  },
  "bugs": {
    "url": "https://github.com/anyions/node-pkg/issues"
  },
  "keywords": [
    "package"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --no-splitting",
    "bump": "bumpp && npm publish --access=public",
    "clean": "pnpm rimraf .turbo node_modules dist",
    "lint": "pnpm eslint .",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@anyions/shared-eslint-config": "^1.0.2",
    "@jsdevtools/ez-spawn": "^3.0.4",
    "find-up": "^7.0.0",
    "mlly": "^1.7.0",
    "pkg-types": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.10",
    "bumpp": "^9.4.1",
    "eslint": "^9.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
